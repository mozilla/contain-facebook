{
    "manifest_version": 2,
    "name": "Facebook Container",
    "version": "1.4.2",

    "description": "Facebook Container isolates your Facebook activity from the rest of your web activity in order to prevent Facebook from tracking you outside of the Facebook website via third party cookies.",

    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
    },

    "applications": {
      "gecko": {
        "id": "@contain-facebook",
        "strict_min_version": "57.0"
      }
    },

    "homepage_url": "https://github.com/mozilla/contain-facebook",

    "permissions": [
        "<all_urls>",
        "activeTab",
        "browsingData",
        "contextualIdentities",
        "cookies",
        "management",
        "storage",
        "tabs",
        "webRequestBlocking",
        "webRequest"
    ],

    "browser_action": {
      "browser_style": true,
      "default_icon": "blocked-48.png",
      "default_title": "Block-facebook",
      "default_popup": "panel.html"
    },

    "background": {
        "scripts": ["background.js"]
    }
}
